{
	"name": "korean-studio",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "npm-run-all --parallel keystone:dev next:dev",
		"build": "npm keystone build --no-ui && npm next build",
		"postinstall": "keystone postinstall",
		"keystone:dev": "keystone dev",
		"keystone:build": "keystone build",
		"keystone:start": "keystone start",
		"next:dev": "next dev",
		"next:build": "npm next build",
		"next:start": "next start",
		"lint": "biome lint -- apply <files>",
		"format": "biome format <files> --write",
		"check": "biome check --apply <files>",
		"prepare": "husky",
		"lint-staged": "lint-staged"
	},
	"dependencies": {
		"@keystone-6/auth": "^8.0.0",
		"@keystone-6/core": "^6.1.0",
		"@prisma/client": "^5.16.1",
		"@svgr/webpack": "^8.1.0",
		"ahooks": "^3.8.0",
		"clsx": "^2.1.1",
		"es-hangul": "^1.3.5",
		"graphql-request": "^7.1.0",
		"graphql-yoga": "^5.4.0",
		"next": "14.2.4",
		"next-auth": "^5.0.0-beta.19",
		"next-intl": "^3.15.0",
		"react": "^18",
		"react-confetti": "^6.1.0",
		"react-dom": "^18",
		"react-hotkeys-hook": "^4.5.0",
		"swr": "^2.2.5",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@biomejs/biome": "1.8.1",
		"@types/node": "^20",
		"@types/react": "^18",
		"@types/react-dom": "^18",
		"husky": "^9.0.11",
		"lint-staged": "^15.2.7",
		"npm-run-all": "^4.1.5",
		"postcss": "^8",
		"prisma": "^5.16.1",
		"tailwindcss": "^3.4.1",
		"typescript": "^5"
	},
	"cspell": {
		"version": "0.2",
		"ignorePaths": [],
		"dictionaryDefinitions": [],
		"dictionaries": [],
		"words": [
			"ahooks",
			"biomejs",
			"clsx",
			"myeongjo",
			"Nanum",
			"NEXTAUTH",
			"Signin",
			"svgr",
			"tailwindcss",
			"Topik"
		],
		"ignoreWords": [],
		"import": []
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
			"biome check --files-ignore-unknown=true",
			"biome check --write --no-errors-on-unmatched",
			"biome check --write --organize-imports-enabled=false --no-errors-on-unmatched",
			"biome check --write --unsafe --no-errors-on-unmatched",
			"biome format --write --no-errors-on-unmatched",
			"biome lint --write --no-errors-on-unmatched"
		],
		"*": ["biome check --no-errors-on-unmatched --files-ignore-unknown=true"]
	}
}
